<h2>Log In!</h2>

  <%= form_tag sessions_path, :class => "new_session" do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
  
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:email] %>
    </div>    
  <div class="actions"><%= submit_tag "Log In!" %></div>
<% end %>    
<ul>  
  <li><%= link_to image_tag( 'facebook_logo.png'), "#" %>  </li>
  <li>Nog geen account? klik <%= link_to " hier.", signup_path, :class => "ajax cboxElement" %></li>
</ul>